        <!--android:layout_height="wrap_content">-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/animated_custom_view_color"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:background="@color/view1"

            >

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/body_kam_vibhag_ni_mahiti" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/animated_imageview_images"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/car_body_work_two" />

        <LinearLayout
            android:id="@+id/animated_color"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/view2"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/body_kam_info_one" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/image14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="20dp"
            android:text="@string/body_work"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/cheese3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:background="@color/view1"

            />

        <!--</com.flavienlaurent.discrollview.lib.DiscrollViewContent>-->

        <!--</com.flavienlaurent.discrollview.lib.DiscrollView>-->


    </LinearLayout>

</ScrollView>
