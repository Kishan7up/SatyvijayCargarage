            android:id="@+id/imagelineborder1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@+id/firstimage"
            android:background="@color/background"
            android:layout_margin="10dp"/>
